<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.willoleary6gmail.cah.LobbyActivity">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPTY"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/player2chck"
        android:layout_marginStart="185dp"
        android:layout_alignStart="@+id/startGame" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="EMPTY"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_above="@+id/player3chck"
        android:layout_marginStart="185dp"
        android:layout_alignStart="@+id/startGame" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPTY"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/player4chck"
        android:layout_marginStart="185dp"
        android:layout_alignStart="@+id/startGame" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="EMPTY"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_above="@+id/startGame"
        android:layout_marginStart="185dp"
        android:layout_alignStart="@+id/startGame" />

    <CheckBox
        android:id="@+id/player1chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_ready"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/player1"
        android:layout_alignBottom="@+id/player1"
        android:layout_alignStart="@+id/leaveGame"
        android:layout_marginStart="50dp" />

    <CheckBox
        android:id="@+id/player2chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_ready"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/startGame"
        android:layout_alignBaseline="@+id/player2"
        android:layout_alignBottom="@+id/player2"
        android:layout_alignStart="@+id/leaveGame"
        android:layout_marginStart="50dp" />

    <CheckBox
        android:id="@+id/player3chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player3"
        android:layout_alignBottom="@+id/player3"
        android:layout_alignStart="@+id/leaveGame"
        android:text="@string/player_ready"
        android:textSize="20sp"
        android:layout_marginStart="50dp" />

    <CheckBox
        android:id="@+id/player4chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player4"
        android:layout_alignBottom="@+id/player4"
        android:layout_alignStart="@+id/leaveGame"
        android:text="@string/player_ready"
        android:textSize="20sp"
        android:layout_marginStart="50dp" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="@string/start_game"
        android:background="@drawable/button_border"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/leaveGame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="@string/leave_lobby"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/gameLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/game_lobby" />

    <TextView
        android:id="@+id/players"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/players"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/player1chck"
        android:layout_alignStart="@+id/player1" />

    <TextView
        android:id="@+id/playerReady"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/player_ready"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/players"
        android:layout_alignStart="@+id/player1chck" />

    <TextView
        android:id="@+id/gameHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/host"
        android:layout_alignBaseline="@+id/player1"
        android:layout_alignBottom="@+id/player1"
        android:layout_toStartOf="@+id/player1"
        android:layout_marginEnd="44dp" />

</RelativeLayout>