<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.willoleary6gmail.cah.MainMenu">

    <Button
        android:text="Find a game"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/findGame" />

    <Button
        android:text="Host a game"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/hostGame"
        android:layout_below="@+id/findGame"
        android:layout_alignStart="@+id/findGame" />

    <Button
        android:text="Settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/hostGame"
        android:layout_alignStart="@+id/hostGame" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:textSize="25sp"
        android:id="@+id/userName"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/settings"
        android:layout_alignEnd="@+id/settings"
        android:layout_marginEnd="12dp" />
</RelativeLayout>
