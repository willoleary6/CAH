<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.willoleary6gmail.cah.MainMenu">

    <Button
        android:text="@string/find_a_game"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:id="@+id/findGame"
        android:layout_above="@+id/hostGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="@string/host_a_game"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/hostGame"
        android:background="@drawable/button_border"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/settings"
        android:layout_alignStart="@+id/findGame" />

    <Button
        android:text="@string/settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:id="@+id/settings"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hostGame" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/userName"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/findGame"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/cahHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:text="@string/cards_against_humanity_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
