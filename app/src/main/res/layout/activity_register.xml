<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.willoleary6gmail.cah.RegisterActivity">

    <EditText
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:background="@color/white"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:theme="@style/Theme.App.Base"
        android:layout_above="@+id/Password"
        android:layout_marginBottom="11dp"
        android:layout_alignEnd="@+id/Password"
        android:layout_alignStart="@+id/Password" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:theme="@style/Theme.App.Base"
        android:layout_above="@+id/button2"
        android:layout_marginBottom="11dp"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border"
        android:text="Register"
        android:theme="@style/Theme.App.Base"
        android:layout_above="@+id/accountExists"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvLoginHere"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Login here"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_border"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/regHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Registration"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/cahHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/cahHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="45sp"
        android:text="Cards Against Humanity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/accountExists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="Have an account already?"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/tvLoginHere"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
