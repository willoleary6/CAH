<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ingame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/black_card"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:text="black card"
        android:padding="10dp"
        android:textSize="15sp"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/white_card1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/leaveGame"
        android:layout_width="wrap_content"
        android:background="@drawable/button_border"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textAllCaps="false"
        android:text="Leave" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Button" />

    <TextView
        android:id="@+id/cahHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cards_against_humanity_header"
        android:textColor="@color/white"
        android:textSize="30sp" />


        <Button
            android:id="@+id/white_card1"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border_white"
            android:gravity="start"
            android:padding="6dp"
            android:text="white card"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/leaveGame"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/white_card3"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border_white"
            android:gravity="start"
            android:padding="6dp"
            android:text="white card2"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_below="@+id/white_card1"
            android:layout_alignStart="@+id/white_card1" />

        <Button
            android:id="@+id/white_card2"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border_white"
            android:gravity="start"
            android:padding="6dp"
            android:text="white card3"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_below="@+id/white_card3"
            android:layout_alignStart="@+id/white_card3" />

        <Button
            android:id="@+id/white_card4"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border_white"
            android:gravity="start"
            android:padding="6dp"
            android:text="white card4"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_below="@+id/white_card2"
            android:layout_alignStart="@+id/white_card2" />

        <Button
            android:id="@+id/white_card5"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border_white"
            android:gravity="start"
            android:padding="6dp"
            android:text="white card5"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_below="@+id/white_card4"
            android:layout_alignStart="@+id/white_card4" />

</RelativeLayout>
